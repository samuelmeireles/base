.row
  .col-md-8
    .jumbotron
      h1
        | Base App 
        span(ng-show='currentUser') {{ currentUser.name }}
        | !
      p
        h1 =D

  .col-md-4
    h3 Login
    form.form(name='form', ng-submit='login(form)', novalidate='novalidate', ng-controller='LoginCtrl')

      .form-group(ng-class='{ \'has-success\': form.email.$valid && submitted, \'has-error\': form.email.$invalid && submitted }')
        input.form-control(type='text', name='email', ng-model='user.email', placeholder='Login', required='')
        
      .form-group(ng-class='{ \'has-success\': form.password.$valid && submitted, \'has-error\': form.password.$invalid && submitted }')
        input.form-control(type='password', name='password', ng-model='user.password', placeholder='Password', required='')

      .form-group.has-error
        p.help-block(ng-show='form.email.$error.required && form.password.$error.required  && submitted')
          | Please enter your email and password.
        p.help-block {{ errors.other }}

      .row
        .col-md-1
          button.btn.btn-default(type='submit') Sign in 

      span.clearfix
  .col-md-4(ng-hide='currentUser')
    h3 Signup
    form.form(name='form', ng-submit='register(form)', novalidate='', ng-controller='SignupHomeCtrl')

      .form-group(ng-class='{ \'has-success\': form.name.$valid && submitted, \'has-error\': form.name.$invalid && submitted }')
        input.form-control(type='text', name='name', ng-model='user.name', placeholder='Name' required='')
        p.help-block(ng-show='form.name.$error.mongoose')
          | {{ errors.name }}

      .form-group(ng-class='{ \'has-success\': form.email.$valid && submitted, \'has-error\': form.email.$invalid && submitted }')
        input.form-control(type='email', name='email', ng-model='user.email', mongoose-error='', placeholder='Email', required='')
        p.help-block(ng-show='form.email.$error.email && submitted')
          | Doesn't look like a valid email.
        p.help-block(ng-show='form.email.$error.mongoose')
          | {{ errors.email }}

      .form-group(ng-class='{ \'has-success\': form.password.$valid && submitted, \'has-error\': form.password.$invalid && submitted }')
        input.form-control(type='password', name='password', ng-model='user.password', ng-minlength='3', required='', mongoose-error='', placeholder='Password')
        p.help-block(ng-show='form.name.$error.required && form.email.$error.required && form.password.$error.required && submitted')
          | All fields are required
        p.help-block(ng-show='form.password.$error.mongoose')
          | {{ errors.password }}

      button.btn.btn-default(type='submit') Sign up
p
