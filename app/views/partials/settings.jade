.modal-header
  button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
  h4.modal-title Settings
.modal-body
  .col-sm-12
    h3 Change Password
    
  .col-sm-12
    form.form(name='form', ng-submit='changePassword(form)', novalidate='', ng-controller='SettingsCtrl')

      .form-group
        input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='', placeholder='Old password')

      .form-group.has-error
        p.help-block(ng-show='form.password.$error.mongoose')
          | {{ errors.other }}

      .form-group
        input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='3', required='', placeholder='New password')
       
      .form-group.has-error
        p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
          | Password must be at least 3 characters.
      
      .form-group.has-success
        p.help-block(ng-hide='form.$dirty')  {{ message }} 

        button.btn.btn-default(type='submit') Save Changes
.modal-footer
  button.btn.btn-default(type='button', data-dismiss='modal') Close
